<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium">

    <TextView
            android:id="@+id/tv_item_weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/font_medium"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

    <ImageView
            android:id="@+id/iv_item_weather_weather"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/tv_item_weather_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/font_medium"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:id="@+id/tv_item_weather_max_tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium"
            android:layout_alignParentRight="true"/>

    <TextView
            android:id="@+id/tv_item_weather_min_tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/white"
            android:layout_toLeftOf="@id/tv_item_weather_max_tmp"
            android:layout_marginRight="@dimen/margin_medium"/>

</RelativeLayout>