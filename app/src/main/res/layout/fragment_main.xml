<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_rxjava_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava Demo"/>

        <Button
            android:id="@+id/btn_pick_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick Pictures"/>

        <Button
            android:id="@+id/btn_dagger_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dagger Demo"/>

        <Button
            android:id="@+id/btn_qrcode_scan_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QRCode Scan Demo"/>

        <Button
            android:id="@+id/btn_bottom_navigator_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BottomNavigatorView"/>

    </LinearLayout>

</LinearLayout>